@model FirstResponsiveWebAppChristensen.Models.UserAgeModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Guess Your Age</title>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/popper.js/popper.min.js"></script>
        <script src="~lib/bootstrap/js/bootstrap.min.js"></script>
    </head>
    <body>
    <main class="container">
        <h1>Guess Your Age</h1>
        <form asp-action="Index" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Enter your Name</label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="birthYear" class="control-label">Enter your year of Birth</label>
                <input asp-for="birthYear" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="control-label">@ViewBag.Name, Your age is</label>
                <input value="@ViewBag.Age.ToString()" class="form-control" readonly />
            </div>
            <button type="submit" class="btn btn-primary">Calculate Age</button>
            <a asp-action="Index">Clear</a>
        </form>
    </main>
    </body>
</html>

